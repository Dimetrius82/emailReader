<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/andback" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edtxtTo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email to be sent to" />

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Subject here" />

        <TextView
            android:id="@+id/txtBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Body here"
            android:lines="5" />

        <EditText
            android:id="@+id/edtxtAdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Add content here"
            android:lines="2" />
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
            >
        <Button 
            android:id="@+id/btnForward"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="fforward"
            android:text="Forward" />
        <Button 
            android:id="@+id/btnFClear"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="fclear"
            android:text="Clear" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>