<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/andback" >
    
    <TextView 
        android:id="@+id/txtsmfrom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Mail From here"/>
    <TextView 
        android:id="@+id/txtsmsub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Mail Subject here"/>
    <TextView 
        android:id="@+id/txtviewmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Email Body here"/>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <Button
        android:id="@+id/btnaccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendingAccept"
        android:background="@drawable/approve" />

    <Button
        android:id="@+id/btnreject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendReject"
        android:background="@drawable/cancel" />

    <Button
        android:id="@+id/btnforward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="forward"
        android:background="@drawable/forward" />

    <Button
        android:id="@+id/btnmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="more"
        android:background="@drawable/info" />
    <Button 
        android:id="@+id/btnsmback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:onClick="erback"/>
    </LinearLayout>
    
</LinearLayout>